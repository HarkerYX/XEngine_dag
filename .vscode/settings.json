    "C_Cpp.errorSquiggles": "disabled",
    "window.zoomLevel": -2,
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "git.openRepositoryInParentFolders": "never",
    "editor.lineNumbers": "relative",
    "editor.scrollBeyondLastLine": true,
    "editor.folding": true,
    "github.copilot.editor.iterativeFixing": false,
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.inlayHints.enabled": "on",
    // "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "C_Cpp.clang_format_sortIncludes": true,
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.codeAnalysis.clangTidy.fallbackConfig": "Google",
    "C_Cpp.codeAnalysis.clangTidy.path": "/usr/bin/clang-tidy",
    "C_Cpp.codeAnalysis.clangTidy.config": ".clang-tidy ",
    "C_Cpp.default.compilerArgs": [
        "-std=c++2b",
        "-fconcepts"
    ],

    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.default.cStandard": "gnu23",
    "C_Cpp.intelliSenseEngineFallback": "enabled",
    "C_Cpp.intelliSenseEngine": "enabled",
    "clangd.arguments": [
        "--clang-tidy",
        "--all-scopes-completion",
        "--background-index",
        "--completion-style=detailed",
        "--function-arg-placeholders",
        "--header-insertion=iwyu",
        "--header-insertion-decorators",
        // "--import-insertions",
        "--compile-commands-dir=${workspaceFolder}",
        "--path-mappings=${workspaceFolder}=/xengine",
        "-j=12",
        "--pch-storage=disk",
        "--use-dirty-headers",
        // "--skip-unavailable-headers",
        "--fallback-style=minimal"
        // "--input-style=file"
        // "--format-style=file"
    ],
}